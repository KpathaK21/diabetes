# Database Configuration
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=diabetes_db
DB_PORT=5432

# SendGrid API key for email verification
# Sign up at https://sendgrid.com/ and create an API key
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Sender email for SendGrid (must be verified in SendGrid)
# This email must be verified in your SendGrid account
SENDER_EMAIL=your_verified_email@example.com

# Application domain for verification links
# For local development, use http://localhost:3000 or diabetesapp://verify
# For production, use your actual domain, e.g., https://diabetesapp.com
APP_DOMAIN=diabetesapp://verify

# Server port (optional, defaults to 8080)
PORT=8080